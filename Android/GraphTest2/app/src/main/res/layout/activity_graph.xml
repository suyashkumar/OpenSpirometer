<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amyzhao.graphtest2.GraphActivity"
    android:background="@drawable/sunset">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="175dip"
        android:id="@+id/barGraph"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/fev1Normal"
        android:layout_alignParentStart="true" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="340dip"
        android:id="@+id/lineGraph"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Recent Results:"
        android:id="@+id/results"
        android:layout_above="@+id/barGraph"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/recordButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="toRecord"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FEV1: "
        android:id="@+id/fev1Recent"
        android:layout_above="@+id/barGraph"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FVC:"
        android:id="@+id/fvcRecent"
        android:layout_below="@+id/fev1Recent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FEV1 (Normal Range): "
        android:id="@+id/fev1Normal"
        android:layout_below="@+id/recordButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FVC (Normal Range):"
        android:id="@+id/fvcNormal"
        android:layout_alignTop="@+id/fvcRecent"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:id="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/fev1Normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flow Rate vs. Time for Most Recent Measurement"
        android:id="@+id/barTitle"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/fvcNormal"
        android:layout_toEndOf="@+id/fvcRecent"
        android:gravity="center"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="History"
        android:id="@+id/lineTitle"
        android:layout_above="@+id/lineGraph"
        android:layout_centerHorizontal="true" />


</RelativeLayout>